@model aigis.Models.Usuario

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input type="text" class="form-control" asp-for="Nombre" required />
    </div>
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input type="email" class="form-control" asp-for="Correo" required />
    </div>
    <div class="form-group">
        <label asp-for="Contrasena"></label>
        <input type="password" class="form-control" asp-for="Contrasena" required />
    </div>
    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input type="text" class="form-control" asp-for="Direccion" />
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input type="text" class="form-control" asp-for="Telefono" />
    </div>
    <div class="form-group">
        <label asp-for="Giro"></label>
        <input type="text" class="form-control" asp-for="Giro" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
