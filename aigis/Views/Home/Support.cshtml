@model aigis.Models.AyudaUsuarios

@{
    ViewData["Title"] = "Support";
}

<h2>Request Support</h2>

<form asp-action="Support" method="post">
    <div class="form-group">
        <label asp-for="Titulo">Title</label>
        <input type="text" class="form-control" asp-for="Titulo" required />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Problema">Description of the Problem</label>
        <textarea class="form-control" asp-for="Problema" rows="5" required></textarea>
        <span asp-validation-for="Problema" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
